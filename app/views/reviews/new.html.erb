<div class="container">
  <h1>Add your review of <%= @restaurant.name %></h1>
  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit class: 'btn btn-success' %>
  <% end %>
  <p><%= link_to 'Home', restaurants_path, class: 'btn btn-secondary mt-4'%></p>
</div>
